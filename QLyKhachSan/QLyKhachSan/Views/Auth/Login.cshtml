@model QLyKhachSan.Models.NHANVIEN
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h2 class="text-primary">
        Sign In
    </h2>
    <div class="form-group">
        @Html.TextBoxFor(m => m.username, new { @placeholder = "username", @class="form-control" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.password, new { @placeholder = "password", @type = "password", @class="form-control" })
    </div>
    <div class="p-t-13 p-b-23">
        <span class="txt1">
            Forgot
        </span>
        <a href="#" class="txt2">
            Username / Password?
        </a>
    </div>
    <div class="container-login100-form-btn">
        <button class="btn btn-primary">
            Sign in
        </button>
    </div>
    <div class="flex-col-c p-t-170 p-b-40">
        <span class="txt1 p-b-9">
            Don’t have an account?
        </span>
        <a href="#" class="txt3">
            Sign up now
        </a>
    </div>
}



